    <style>

        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .topnav .search-wrapper {
            display: inline;
            align-items: initial;
            gap: 5px;
            max-width: 300px; /* Set the desired maximum width */
            /* Float four columns side by side */
        }

        .column {
            flex: 0 0 auto; /* Prevent columns from shrinking */
            width: 25%;
            padding: 0 10px;
        }

        /* Clear floats after the columns */
        .row {
            display: flex;
            flex-wrap: nowrap; /* Prevent wrapping */
            margin: 0 -5px;
            overflow-x: auto; /* Enable horizontal scrolling */
            scrollbar-width: thin; /* For modern browsers to make scrollbar slimmer */
        }

        /* Style the counter cards */
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            padding: 20px;
            margin-top: 10px;
            text-align: center;
            background-color: #f1f1f1;
        }

        .scrollmenu {
            display: inline-flex;
            white-space: break-spaces;
            overflow-x: scroll;
            border: 2px solid #e9ecef;
            width: 100%;
        }

            .scrollmenu .column {
                flex: 0 0 auto; /* Prevent columns from shrinking */
                width: 25%; /* Adjust this if needed to fit the number of items */
                padding: 0 5px; /* Reduce padding if necessary */
            }


            .scrollmenu::-webkit-scrollbar {
                height: 8px; /* Adjust scrollbar height */
            }

            .scrollmenu::-webkit-scrollbar-thumb {
                background-color: #777;
                border-radius: 10px;
            }

            .scrollmenu::-webkit-scrollbar-track {
                background: #333;
            }

        .topnav {
            display: flex; /* Use flexbox for layout */
            justify-content: flex-end; /* Align the search bar to the right */
            overflow: hidden;
            align-items: inherit;
            padding: 5px 10px;
            float: inline-end;
            margin-top: 9px;
            margin-bottom: 9px;
            display: inline-block;
            margin-right: 5px;
            background-color: #e9e9e9;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

            .topnav a {
                float: left;
                display: block;
                color: black;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #2196F3;
                    color: white;
                }

            .topnav .search-container {
                display: inline; /* Use flexbox for alignment inside the container */
                flex-grow: 0; /* Allow the search container to fill the available space */
                float: right;
            }

            .topnav input[type=text] {
                padding: 6px;
                margin-top: 7px;
                margin-left: 3px;
                font-size: 17px;
                border: none;
                flex-grow: 1;
            }

        .search-container button {
            float: none;
            padding: 5px 10px;
            margin-top: 6px;
            margin-bottom: 3px;
            margin-right: 16px;
            background: #ddd;
            font-size: 20px;
            border: none;
            cursor: pointer;
        }

        .topnav .search-container button:hover {
            background: #ccc;
        }

        screen and (max-width: 600px) {


        {
            float: none;
            width: 200px;
        }

        .topnav a, .topnav input[type=text], .topnav .search-container button {
            float: none;
            display: block;
            text-align: left;
            width: 100%;
            margin: 0;
            padding: 14px;
        }

        .topnav input[type=text] {
            border: 1px solid #ccc;
        }
        }
    </style>
